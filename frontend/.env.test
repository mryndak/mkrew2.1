# mkrew Frontend - E2E Test Environment Variables
# This configuration is used for Playwright E2E tests with local backend
# DO NOT use production API for tests!

# =============================================================================
# API Configuration - LOCAL BACKEND
# =============================================================================

# Backend API base URL - LOCAL TESTING ONLY
# This points to the local backend running via docker-compose.test.yml
# Rate limiting is DISABLED in test backend (RATE_LIMIT_ENABLED=false)
PUBLIC_API_BASE_URL=http://localhost:8080/api/v1

# =============================================================================
# Feature Flags - Test Configuration
# =============================================================================

# Enable favorite functionality
PUBLIC_ENABLE_FAVORITES=true

# Enable scraper status display
PUBLIC_ENABLE_SCRAPER_STATUS=true

# Analytics DISABLED for tests
PUBLIC_ENABLE_ANALYTICS=false

# =============================================================================
# Analytics & Monitoring - Disabled for tests
# =============================================================================

# Google Analytics 4 - disabled
PUBLIC_GA_TRACKING_ID=

# Sentry - disabled for tests
PUBLIC_SENTRY_DSN=

# Environment identifier
PUBLIC_SENTRY_ENVIRONMENT=test

# =============================================================================
# Application Settings
# =============================================================================

# Application environment
PUBLIC_ENV=test

# Application version
PUBLIC_APP_VERSION=2.1.0

# Site URL - local development
PUBLIC_SITE_URL=http://localhost:4321

# =============================================================================
# Security & Authentication
# =============================================================================

# Google reCAPTCHA v2 - TEST KEY (always passes)
# This test key is provided by Google for development/testing
# See: https://developers.google.com/recaptcha/docs/faq#id-like-to-run-automated-tests-with-recaptcha.-what-should-i-do
PUBLIC_RECAPTCHA_SITE_KEY=6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI

# =============================================================================
# Cache Configuration
# =============================================================================

# Redux cache duration (5 minutes)
PUBLIC_CACHE_DURATION=300000

# API request timeout (30 seconds)
PUBLIC_API_TIMEOUT=30000
