# mkrew Frontend - Environment Variables Example
# Copy this file to .env.local and fill in the values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API base URL
# Development: http://localhost:8080/api/v1
# Staging: https://api-staging.mkrew.pl/api/v1
# Production: https://api.mkrew.pl/api/v1
PUBLIC_API_BASE_URL=http://localhost:8080/api/v1

# =============================================================================
# Feature Flags
# =============================================================================

# Enable favorite functionality (requires authentication)
PUBLIC_ENABLE_FAVORITES=true

# Enable scraper status display
PUBLIC_ENABLE_SCRAPER_STATUS=true

# Enable analytics tracking
PUBLIC_ENABLE_ANALYTICS=false

# =============================================================================
# Analytics & Monitoring
# =============================================================================

# Google Analytics 4 tracking ID
PUBLIC_GA_TRACKING_ID=

# Sentry DSN for error tracking
PUBLIC_SENTRY_DSN=

# Sentry environment
PUBLIC_SENTRY_ENVIRONMENT=development

# =============================================================================
# Application Settings
# =============================================================================

# Application environment
PUBLIC_ENV=development

# Application version
PUBLIC_APP_VERSION=2.1.0

# Site URL
PUBLIC_SITE_URL=http://localhost:4321

# =============================================================================
# Cache Configuration
# =============================================================================

# Redux cache duration in milliseconds (default: 5 minutes)
PUBLIC_CACHE_DURATION=300000

# API request timeout in milliseconds (default: 30 seconds)
PUBLIC_API_TIMEOUT=30000
