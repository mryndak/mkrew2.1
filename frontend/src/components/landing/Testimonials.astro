---
import TestimonialCard from './TestimonialCard.astro';
import { testimonials } from '../../data/landing';
---

{testimonials && testimonials.length > 0 && (
  <section id="testimonials" class="section bg-secondary-50">
    <div class="container-custom">
      <!-- Section Heading -->
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="mb-4">
          Co mówią nasi użytkownicy
        </h2>
        <p class="text-lg md:text-xl text-secondary-600">
          Dołącz do społeczności dawców krwi, którzy już korzystają z mkrew
        </p>
      </div>

      <!-- Testimonials Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {testimonials.map((testimonial, index) => (
          <div
            class="animate-fade-in"
            style={`animation-delay: ${index * 0.15}s;`}
          >
            <TestimonialCard testimonial={testimonial} />
          </div>
        ))}
      </div>

      <!-- Optional: Add more testimonials prompt -->
      <div class="text-center mt-12">
        <p class="text-secondary-600 text-sm">
          ⭐⭐⭐⭐⭐ Ocena 5/5 od naszych użytkowników
        </p>
      </div>
    </div>
  </section>
)}
