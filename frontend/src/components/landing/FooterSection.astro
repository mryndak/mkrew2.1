---
import type { FooterSection } from '../../types/landing';

interface Props {
  section: FooterSection;
}

const { section } = Astro.props;
---

<div class="space-y-4">
  <!-- Section Title -->
  <h4 class="font-bold text-secondary-900 text-lg">
    {section.title}
  </h4>

  <!-- Links List -->
  {section.links && section.links.length > 0 && (
    <ul class="space-y-2">
      {section.links.map((link) => (
        <li>
          <a
            href={link.href}
            target={link.external ? '_blank' : undefined}
            rel={link.external ? 'noopener noreferrer' : undefined}
            aria-label={link.ariaLabel || link.label}
            class="text-secondary-600 hover:text-primary-600 transition-colors duration-200 inline-flex items-center gap-1"
          >
            {link.label}
            {link.external && (
              <svg
                class="w-3 h-3"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                />
              </svg>
            )}
          </a>
        </li>
      ))}
    </ul>
  )}
</div>
