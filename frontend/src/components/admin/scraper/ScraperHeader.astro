---
/**
 * ScraperHeader - Nagłówek strony Scraper Monitoring
 * Komponent prezentacyjny (Astro) z tytułem i opisem
 *
 * Features:
 * - Tytuł strony "Scraper Monitoring"
 * - Opis funkcjonalności
 * - Responsywny layout
 */

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Scraper Monitoring',
  description = 'Monitorowanie i zarządzanie systemem web scrapingu',
} = Astro.props;
---

<header class="mb-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">{title}</h1>
      <p class="mt-2 text-sm text-gray-600">
        {description}
      </p>
    </div>

    <!-- Slot dla dodatkowych akcji (np. Manual Trigger Button) -->
    <div class="mt-4 sm:mt-0">
      <slot name="actions" />
    </div>
  </div>
</header>
