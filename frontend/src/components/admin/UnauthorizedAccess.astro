---
/**
 * UnauthorizedAccess - Komponent wyświetlany gdy użytkownik nie ma uprawnień
 * Używany gdy użytkownik próbuje dostać się do panelu admin bez roli ADMIN
 */

interface Props {
  message?: string;
  returnUrl?: string;
}

const {
  message = 'Nie masz uprawnień do dostępu do tej strony. Panel administracyjny jest dostępny tylko dla użytkowników z rolą ADMIN.',
  returnUrl = '/',
} = Astro.props;
---

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-lg shadow-lg p-8">
      {/* Icon */}
      <div class="flex justify-center mb-6">
        <div class="p-4 bg-red-100 rounded-full">
          <svg
            class="w-16 h-16 text-red-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
            />
          </svg>
        </div>
      </div>

      {/* Title */}
      <h1 class="text-2xl font-bold text-gray-900 text-center mb-4">
        Brak dostępu
      </h1>

      {/* Message */}
      <p class="text-gray-600 text-center mb-8">
        {message}
      </p>

      {/* Actions */}
      <div class="space-y-3">
        <a
          href={returnUrl}
          class="block w-full px-6 py-3 bg-primary-600 text-white text-center font-medium rounded-lg
                 hover:bg-primary-700 transition-colors duration-200
                 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
        >
          Powrót do strony głównej
        </a>

        <a
          href="/login"
          class="block w-full px-6 py-3 bg-white text-gray-700 text-center font-medium rounded-lg
                 border border-gray-300 hover:bg-gray-50 transition-colors duration-200
                 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
        >
          Zaloguj się ponownie
        </a>
      </div>

      {/* Help text */}
      <div class="mt-8 pt-6 border-t border-gray-200">
        <p class="text-sm text-gray-500 text-center">
          Jeśli uważasz, że to błąd, skontaktuj się z administratorem systemu.
        </p>
      </div>
    </div>
  </div>
</div>

<style>
  /* Focus visible dla keyboard navigation */
  *:focus-visible {
    outline: 2px solid theme('colors.blue.500');
    outline-offset: 2px;
  }
</style>
